// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int    @id @default(autoincrement())
  firstname String
  lastname  String
  email     String @unique
  country   String
  city      String
  state     String
  password  String
}

model ProfileImg {
  id    Int     @id @default(autoincrement())
  email String  @unique
  image String?
}
