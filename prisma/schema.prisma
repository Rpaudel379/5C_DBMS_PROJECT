model User {
  id       String @id @default(cuid())
  email    String @unique
  password String

}

model Info {
  id        Int    @id @default(autoincrement())
  userid    String @unique
  firstname String
  lastname  String
}

model ProfileImg {
  id     Int     @id @default(autoincrement())
  userid String  @unique
  image  String?
}

model Address {
  id      Int    @id @default(autoincrement())
  userid  String @unique
  country String
  state   String
  city    String
}

model Bio {
  id     Int     @id @default(autoincrement())
  userid String  @unique
  bio    String?
}
